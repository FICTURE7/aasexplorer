<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="10sp">

    <TextView
        android:id="@+id/text_question_paper_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paper 1"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/text_question_paper_season"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="May/June"
        android:layout_below="@id/text_question_paper_name"/>

    <TextView
        android:id="@+id/text_question_paper_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2007"
        android:gravity="right"
        android:layout_below="@id/text_question_paper_name"
        android:layout_toEndOf="@id/text_question_paper_season"
        android:layout_toRightOf="@id/text_question_paper_season"/>

</RelativeLayout>
