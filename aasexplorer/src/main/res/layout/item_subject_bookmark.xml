<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5sp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/check_subject_bookmark"
        android:layout_toStartOf="@id/check_subject_bookmark">

        <TextView
            android:id="@+id/text_subject_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/text_subject_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_subject_name"
            android:text="@string/_"/>
    </RelativeLayout>

    <CheckBox
        android:id="@id/check_subject_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>